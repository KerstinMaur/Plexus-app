<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundColor">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/main_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_6.5"
        android:background="@color/backgroundColor"
        app:tabIndicatorFullWidth="false"
        app:tabIndicatorHeight="3dp"
        app:tabIndicator="@drawable/shape_rounded_corners"
        app:tabTextAppearance="@style/TabText"
        app:tabRippleColor="@android:color/transparent">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/main_data_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/plexus_data"/>

        <com.google.android.material.tabs.TabItem
            android:id="@+id/main_installed_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menu_installed_apps"/>

    </com.google.android.material.tabs.TabLayout>

    <include layout="@layout/divider_horizontal"/>

    <include
        android:id="@+id/tab_host_fragment"
        layout="@layout/activity_host_fragment"/>

</LinearLayout>