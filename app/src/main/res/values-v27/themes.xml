<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--SPLASH LIGHT THEME-->
    <style name="SplashTheme" parent="BaseSplashTheme">
        <item name="android:navigationBarColor">@color/grey_800</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <!--APP LIGHT THEME-->
    <style name="AppTheme" parent="BaseAppTheme">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarColor">@color/backgroundColor</item>
    </style>

    <!--BOTTOM SHEET STYLE-->
    <style name="CustomBottomSheetTheme" parent="BaseBottomSheetTheme">
        <item name="android:navigationBarColor">@color/bottomSheetColor</item>
    </style>

</resources>